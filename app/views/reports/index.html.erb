<h1>Reports</h1>

<%= button_to 'New Report', new_report_path, method: :get %>
<br>
<table>
  <tr>
    <th>Title</th>
    <th>Grade</th>
    <th>Author</th>
    <th>Created</th>
  </tr>
    <% @reports.each do |report| %>
  <tr>
      <td><%= link_to report.title, report %></td>
      <td><%= report.grade %></td>
      <td><%= report.user.email %></td>
      <td><%= report.created_at.to_date %></td>
  </tr>
  <% end %>
</table>